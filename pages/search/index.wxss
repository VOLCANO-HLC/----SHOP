/* pages/search/index.wxss */
page{
  background-color: #dedede;
}
.search-row{
display: flex;
height: 60rpx;
margin: 20rpx 0;
font-size: 28rpx;
}
.search-row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  margin: 0 20rpx;
}
.search-row text{
  width: 100rpx;
  height: 100%;
background-color: #fff;
padding: 10rpx;
text-align: center;
margin-right: 20rpx;
}
.search-content{
  margin: 0 20rpx;
}
.search-content .search-item{
  width: 100%;
  background-color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 20rpx 10rpx;
 border-bottom: 1px solid #ccc;
  
}

























